# ==========================================
# Grocery Tracker - Environment Configuration
# ==========================================
# Copy this file to .env and update the values for your environment
# IMPORTANT: Change all passwords before deploying to production!

# PostgreSQL Admin Configuration
# These credentials are for the PostgreSQL superuser
POSTGRES_DB=grocery_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_123

# Application Database User
# These credentials are for the application to connect to PostgreSQL
# The app_user has limited privileges (SELECT, INSERT, UPDATE, DELETE)
DB_HOST=postgres
DB_NAME=grocery_db
DB_USER=app_user
DB_PASSWORD=CHANGE_ME_APP_PASSWORD_456
DB_PORT=5432

# Frontend API Configuration
# Use /api for Docker deployment (nginx reverse proxy)
# Use http://localhost:5000/api for local development
VITE_API_URL=/api

FRONTEND_PORT=8080